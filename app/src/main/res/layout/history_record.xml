<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <com.uteamtec.heartcool.user.ColorfulRingProgressView
            android:id="@+id/activity_history_rp_progressAvghr"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:bgColor="@color/colorHint"
            app:fgColorEnd="@color/colorRole"
            app:fgColorStart="@color/colorRoles"
            app:percent="100"
            app:startAngle="0"
            app:strokeWidth="4dp" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/avaghr"
                android:textColor="@color/colorTransparent"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_history_tv_avghr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorMain"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/activity_history_tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BPM"
                    android:textColor="@color/colorTransparent"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <com.uteamtec.heartcool.user.ColorfulRingProgressView
            android:id="@+id/activity_history_rp_progressNormalheart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:bgColor="@color/colorHint"
            app:fgColorEnd="@color/colorRole"
            app:fgColorStart="@color/colorRoles"
            app:percent="100"
            app:startAngle="0"
            app:strokeWidth="4dp" />

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/normalHeart"
                android:textColor="@color/colorTransparent"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/activity_history_tv_normalHeart"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/colorMain"
                android:textSize="10sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>