<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <attr name="bgColor" format="color" />
    <attr name="fgColor" format="color" />
    <attr name="percent" format="float" />
    <attr name="startAngle" format="float" />

    <declare-styleable name="SectorProgressView">
        <attr name="bgColor" />
        <attr name="fgColor" />
        <attr name="percent" />
        <attr name="startAngle" />
    </declare-styleable>

    <declare-styleable name="ColorfulRingProgressView">
        <attr name="bgColor" />
        <attr name="fgColorStart" format="color" />
        <attr name="fgColorEnd" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="percent" />
        <attr name="startAngle" />
    </declare-styleable>

    <declare-styleable name="EcgView">
        <attr name="fps" format="integer"/>
        <attr name="scale" format="integer"/>
        <attr name="baseline" format="integer"/>
        <attr name="paint_strokewidth" format="dimension"/>
        <attr name="paint_color" format="color"/>
        <attr name="background_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="RingMeterView">
        <attr name="unit" format="string"/>
        <attr name="range" format="integer"/>
        <attr name="foreground_ring_color" format="reference|color"/>
        <attr name="background_ring_color" format="reference|color"/>
        <attr name="value_color" format="reference|color"/>
        <attr name="unit_color" format="reference|color"/>
    </declare-styleable>

</resources>